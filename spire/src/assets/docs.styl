.highlight
  &.Person
    background-color #d9b8f1
  &.Location
    background-color #BDC03F
  &.Organization
    background-color #ffe543
  &.Money
    background-color #FF9B14
  &.Misc
    background-color #F69AC1
  &.Phone
    background-color #8EB4FF
  &.Interesting
    background-color #f1f1b8
  &.Other
    background-color #EFE4D7

.Date
  &.highlight
    background-color #67E1D8

.unused
  background-color #4B0082

div#doc-panel
  width 30%

div#tool
  position fixed
  width 30%
  top 0
  background-color white

em, button.category
  cursor pointer
  border-radius 6px
  padding 2px
  box-shadow 2px 2px 2px #888888

h3
  &.panel-heading
    margin 0px

#clearFilter
  float right

.doc
  font-family arial, helvetica, 'sans-serif'
  font-size 12px
  padding 2px
  fill white
  p
    margin 0

p
  &.doc-content
    margin-top 8px
    overflow scroll

.doc-title
  font-size 18px
  text-align center
